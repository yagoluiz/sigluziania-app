@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="SIG Web Luziânia" />
    <meta name="author" content="Yago Luiz dos Santos <yago.luiz@gmail.com>" />
    <base href="~/administrador/" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="@Url.Content("~/Images/logo-sig-luziania.png")" width="150" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Administrador<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Usuários", "Index", "Usuario")</li>
                            <li>@Html.ActionLink("Perfil", "Index", "Perfil")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Educação<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Instituições", "Index", "Educacao")</li>
                            <li>@Html.ActionLink("Avaliações", "Index", "Avaliacao")</li>
                            <li>@Html.ActionLink("Vincular Avaliações", "Index", "EducacaoAvaliacao")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Lazer<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Tipos", "Index", "TipoLazer")</li>
                            <li>@Html.ActionLink("Localidades", "Index", "Lazer")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Saúde<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Tipos", "Index", "TipoSaude")</li>
                            <li>@Html.ActionLink("Localidades", "Index", "Saude")</li>
                            <li>@Html.ActionLink("Especialidades", "Index", "Especialidade")</li>
                            <li>@Html.ActionLink("Vincular Especialidades", "Index", "SaudeEspecialidade")</li>

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Segurança<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Tipos", "Index", "TipoSeguranca")</li>
                            <li>@Html.ActionLink("Localidades", "Index", "Seguranca")</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Bem-vindo " + User.Identity.GetUserName() + "!" + " - Sair", "Logoff", "Autenticacao", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SIG Luziânia</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modal")
    @RenderSection("scripts", required: false)
</body>
</html>