@model SIG_Luziania_Web.Areas.Administrador.ViewModels.SaudeEspecialidadeViewModel

@{
    Layout = null;
    ViewBag.Title = "Editar Vínculo de Especialidade";
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Editar Vínculo de Especialidade</h3>
            </div>

            @Html.AntiForgeryToken()

            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger bg-danger" })
                    @Html.HiddenFor(model => model.SaudeEspecialidadeId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.SaudeId, "Saúde", htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.DropDownListFor(model => model.SaudeId, null, "Selecione...", htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.SaudeId, "", new { @class = "text-danger bg-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EspecialidadeId, "Especialidade", htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.DropDownListFor(model => model.EspecialidadeId, null, "Selecione...", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EspecialidadeId, "", new { @class = "text-danger bg-danger" })
                        </div>
                    </div>

                    <div class="modal-footer">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        }

    </div>
</div>