@model SIG_Luziania_Web.Areas.Administrador.ViewModels.EducacaoAvaliacaoViewModel

@{
    Layout = null;
    ViewBag.Title = "Editar Vinculação";
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Editar Vínculo</h3>
            </div>

            @Html.AntiForgeryToken()

            <div class="modal-body">
                <div class=" form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger bg-danger" })
                    @Html.HiddenFor(model => model.EducacaoAvaliacaoId)
                    @Html.HiddenFor(model => model.EducacaoId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.EducacaoId, "Instituição", htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.DropDownListFor(model => model.EducacaoId, null, "Selecione...", htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.EducacaoId, "", new { @class = "text-danger bg-danger bg-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AvaliacaoId, "Avaliação", htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.DropDownListFor(model => model.AvaliacaoId, null, "Selecione...", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AvaliacaoId, "", new { @class = "text-danger bg-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nota, htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Nota, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nota, "", new { @class = "text-danger bg-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Ano, htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Ano, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ano, "", new { @class = "text-danger bg-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
            </div>
        }
    </div>
</div>