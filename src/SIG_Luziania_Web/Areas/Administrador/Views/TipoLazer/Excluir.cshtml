@model SIG_Luziania_Web.Areas.Administrador.ViewModels.TipoLazerViewModel
@using SIG_Luziania_Web.Models;

@{
    Layout = null;
    ViewBag.Title = "Excluir Tipo de Lazer";
    SigLuzianiaContexto db = new SigLuzianiaContexto();
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Excluir Tipo de Lazer</h3>
            </div>

            @Html.AntiForgeryToken()

            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>

                    <div class="alert alert-danger" role="alert">
                        @if (!(db.Lazer.Any(x => x.TipoLazerId == Model.TipoLazerId)))
                        {
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span>Deseja excluir este tipo de lazer?</span>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span>Existe um lazer com este tipo!</span>
                        }
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div class="form-actions no-color">
                    @if (!(db.Lazer.Any(x => x.TipoLazerId == Model.TipoLazerId)))
                    {
                        <input type="submit" value="Excluir" class="btn btn-danger" />
                    }
                    else
                    {
                        <input type="submit" value="Excluir" class="btn btn-danger" disabled="disabled" />
                    }
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        }
    </div>
</div>